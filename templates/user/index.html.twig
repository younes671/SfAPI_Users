{% extends 'base.html.twig' %}

{% block title %}Hello ApiController!{% endblock %}

{% block body %}
<h1>Users</h1>

<div class="users">
    {% for user in users.results %}
        <div class="user">
            <div class="top">
                <div>
                    <h2> {{ user.name.title }} {{ user.name.last }} {{ user.name.first }}</h2>
                    <p class="txt-light"><i class="ri-mail-line"></i>&nbsp;{{ user.email }}</p>
                    <p class="txt-light"><i class="ri-smartphone-line"></i>&nbsp;{{ user.phone }}</p>
                </div>
                <div>
                    <img src="{{ user.picture.large}}" alt="">
                </div>
            </div>
            <div class="details">
                <div>
                    <i class="ri-map-pin-2-line"></i>&nbsp;{{ user.location.street.number }} {{ user.location.street.name }} <br>
                    <p>{{ user.location.postcode }} {{ user.location.city }}</p>
                    <p>{{ user.location.country }}</p>
                </div>
                <div class="data">
                    <form action=" {{ path('membre_add') }} " method="post">
                        <input type="hidden" name="title" value="{{ user.name.title }}">
                        <input type="hidden" name="last" value="{{ user.name.last }}">
                        <input type="hidden" name="first" value="{{ user.name.first }}">
                        <input type="hidden" name="email" value="{{ user.email }}">
                        <input type="hidden" name="phone" value="{{ user.phone }}">
                        <input type="hidden" name="picture" value="{{ user.picture.large }}">
                        <input type="hidden" name="streetnumber" value="{{ user.location.street.number }}">
                        <input type="hidden" name="streetname" value="{{ user.location.street.name }}">
                        <input type="hidden" name="postcode" value="{{ user.location.postcode }}">
                        <input type="hidden" name="city" value="{{ user.location.city }}">
                        <input type="hidden" name="country" value="{{ user.location.country }}">
                        <input type="hidden" name="uuid" value="{{ user.login.uuid}}">
                        <button type="submit">
                            <i class="ri-folder-add-line plus"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}
</div>

<h2>Ajouter un membre</h2>
<div class="formAddMembre">
    <form class="form" action=" {{ path('membre_add') }} " method="post">
        <label for="title">Title</label>
        <input class="input" type="text" name="title"><br>
        <label for="last">Last</label>
        <input class="input" type="text" name="last"><br>
        <label for="first">First</label>
        <input class="input" type="text" name="first"><br>
        <label for="email">Email</label>
        <input class="input" type="text" name="email"><br>
        <label for="phone">Phone</label>
        <input class="input" type="text" name="phone"><br>
        <label for="picture">Picture</label>
        <input class="input" type="text" name="picture"><br>
        <label for="streetnumber">Street Number</label>
        <input class="input" type="text" name="streetnumber"><br>
        <label for="streetname">Street Name</label>
        <input class="input" type="text" name="streetname"><br>
        <label for="postcode">Post Code</label>
        <input class="input" type="text" name="postcode"><br>
        <label for="city">City</label>
        <input class="input" type="text" name="city"><br>
        <label for="country">Country</label>
        <input class="input" type="text" name="country"><br>
        <button class="btn" type="submit">Ajouter</button>
    </form>
</div>
{% endblock %}
